<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editKeyword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:hint="enter keywords"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="14sp" />

    <pyxis.uzuki.live.predicatelayout.PredicateLayout
        android:id="@+id/predicateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical"
        app:backgroundResources="@drawable/btn_predicate_keyword"
        app:gravity="center"
        app:horizontalSpacing="7dp"
        app:textColor="@android:color/black"
        app:textSize="14sp"
        app:verticalSpacing="13dp" />
</LinearLayout>